<% layout('layouts/boilerplate') %>

<h1>Register</h1>

<form action="/users" method="POST">
  <label for="name">First Name: </label>
  <input
    type="text"
    id="name"
    name="firstName"
    value="<%= user.firstName %>"
    required
  />
  <label for="name">Last Name: </label>
  <input
    type="text"
    id="name"
    name="lastName"
    value="<%= user.lastName %>"
    required
  />
  <br />

  <fieldset>
    <legend>What languages are you intereted in?</legend>
    <% languages.forEach(language => { %>
    <div>
      <input type="checkbox" id="<%= language %>" value="<%= language %>" name="interest"/>
      <label for="<%= language %>"><%= language %></label>
    </div>
    <% }) %>
  </fieldset>

  <br />
  <label for="email">Email: </label>
  <input
    type="email"
    id="email"
    size="35 "
    value="<%= user.email  %>"
    required
  />
  <br />
  <input type="submit" value="Register" />
</form>
