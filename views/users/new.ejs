<% layout('layouts/boilerplate') %>

<h1><%= title %></h1>

<form action="/users" method="POST">
  <label for="name">Name: </label>
  <input type="text" id="name" name="name" value="<%= user.name %>" required />
  <br />

  <fieldset>
    <legend>What languages are you intereted in?</legend>

    <div>
      <input type="checkbox" id="interest" name="interest" checked />
      <label for="interest">English</label>
    </div>
    <div>
      <input type="checkbox" id="interest" name="interest" />
      <label for="interest">Mandarin</label>
    </div>
    <div>
      <input type="checkbox" id="interest" name="interest" />
      <label for="interest">French</label>
    </div>
    <div>
      <input type="checkbox" id="interest" name="interest" />
      <label for="interest">Spanish</label>
    </div>
    <div>
      <input type="checkbox" id="interest" name="interest" />
      <label for="interest">Japanese</label>
    </div>
    <div>
      <input type="checkbox" id="interest" name="interest" />
      <label for="interest">Korean</label>
    </div>
  </fieldset>

  <br />
  <label for="email">Email: </label>
  <input
    type="email"
    id="email"
    size="35 "
    value="<%= user.email  %>"
    required
  />
  <br />
  <input type="submit" value="Register" />
</form>


